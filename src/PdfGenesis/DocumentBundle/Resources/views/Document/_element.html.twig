<div class="document-element-container" data-id="{{ document.id }}">
    <div class="document-element">
        <a href="{{ path('design',{'id_document' : document.id}) }}">
            <img src="{{ image64(document.documentImg.path) }}" alt="{{ document.title }}"/>
            <ul>
                <li>{{ document.title }}</li>
                <li>{{ document.createdAt | date('d-m-Y') }}</li>
            </ul>
        </a>

    </div>
    <div class="document-action" data-id="{{ document.id }}">
        <a class="upload-document" href="{{ path('generate_pdf',{'id': document.id}) }}"><i class="material-icons">file_download</i></a>
        <a class="edit-document"><i class="material-icons">mode_edit</i></a>
        <a class="delete-document"><i class="material-icons">delete</i></a>
    </div>
</div>