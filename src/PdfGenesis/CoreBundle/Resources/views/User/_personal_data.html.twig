<div class="personal-data">
    {% if user is defined and user is not null %}
        <div class="profile-picture">
            <div id="picture"></div>
        </div>
        <div class="data">
            <ul>
                <li> <strong>Pseudo : </strong> {{ user.username }} </li>
                <li id="email-user"> <strong>Email : </strong> <text>{{ user.email }} </text> <a id="email-user-edit" data-value="{{ user.email }}"><i class="material-icons">mode_edit</i></a></li>
            </ul>
        </div>
        <div><a class="btn btn-success" data-toggle="modal" data-target="#update_user-modal">Changer le mot de passe</a></div>
        <div class="info-plus"> Member since {{ user.createdAt | date('d-m-Y') }}</div>
        <div class="update-user-modal">
            {% include 'PdfGenesisCoreBundle:User:_update_modal.html.twig' %}
        </div>
    {% endif %}
</div>