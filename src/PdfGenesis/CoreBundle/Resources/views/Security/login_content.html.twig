{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" id="login-form" class="form-horizontal">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
<div class="inputs">
    <div class="form-group is-empty">
        <label for="username" class="floating-label control-label">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" />
    </div>
    <div class="form-group is-empty">
        <label for="password" class="floating-label control-label">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" class="form-control" name="_password" required="required" />
    </div>
